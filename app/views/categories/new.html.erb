<div class="category-form-container">
  <div class="header">
    <%= link_to '←', categories_path, class: 'back-link' %>
    <h1>New Category</h1>
  </div>
  
  <div>
    <%= form_for @category, url: categories_path, method: :post, html: { class: 'category-form' } do |f| %>
      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name', required: true%>
      </div>

      <div class="field">
        <%= f.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: 'Icon (URL)', required: true %>
      </div>

      <div class="actions">
        <%= f.submit "Save", class: 'submit-button' %>
      </div>
    <% end %>
  </div>
</div>
