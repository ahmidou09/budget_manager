<div>
  <div>
    <a href="<%= categories_path %>">
      back
    </a>
    <h1>New Category</h1>
  </div>
  <div>
    <%= form_for @category, url: categories_path, method: :post do |f| %>
      <fieldset>
         <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name', required: true %>
      </fieldset>
      <fieldset>
          <%= f.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: 'Icon (URL)', required: true %>
      </fieldset>
      <fieldset>
        <%= f.submit "Save" %>
      </fieldset>
    <% end %>
  </div>
</div>