<div>
  <div>
    <a href="<%= category_path(@category) %>">
      back
    </a>
    <h1>New Transaction</h1>
  </div>
  <div>
    <%= form_for :transfer, url: category_transfers_path(@category), method: :post do |f| %>
      <fieldset>
         <%= f.text_field :name, id: 'name', autofocus: true, autocomplete: "name", placeholder: 'Name', required: true %>
      </fieldset>
      <fieldset>
          <%= f.text_field :amount, id: 'amount', autofocus: true, autocomplete: "amount", placeholder: 'Amount', required: true %>
      </fieldset>
      <fieldset>
        <%= f.submit "Save"%>
      </fieldset>
    <% end %>
  </div>
</div>