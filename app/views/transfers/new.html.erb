<div class="new-transaction-container">
  <div class="header">
    <%= link_to '←', category_path(@category), class: 'back-link' %>
    <h1 class="page-title">New Transaction</h1>
  </div>

  <div class="transaction-form">
    <%= form_for :transfer, url: category_transfers_path(@category), method: :post, html: { class: 'transaction-form' } do |f| %>
      <div class="field">
        <%= f.text_field :name, id: 'name', autofocus: true, autocomplete: "name", placeholder: 'Name', required: true %>
      </div>

      <div class="field">
        <%= f.text_field :amount, id: 'amount', autofocus: true, autocomplete: "amount", placeholder: 'Amount', required: true %>
      </div>

      <div class="actions">
        <%= f.submit "Save", class: 'submit-button' %>
      </div>
    <% end %>
  </div>
</div>